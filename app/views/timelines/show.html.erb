<main class="container">
  <header class="row">
    <%= render partial: 'static_pages/masthead', locals: { user: @user } %>
  </header>

  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12 panel">
          <div class="row">
            <div class="col-md-12">
              <h3 class="panel-header">About</h3>
            </div>
          </div>
          <div class="row panel-content">
            <div class="col-md-12">
              <table>
                <tr>
                  <td>Birthday:  </td>
                  <td><%= show_date @profile.birthday %></td>
                </tr>
                <tr>
                  <td>College:  </td>
                  <td><%= @profile.college %></td>
                </tr>
                <tr>
                  <td>Hometown:  </td>
                  <td><%= show_address @profile.hometown %></td>
                </tr>
                <tr>
                  <td>Current Residence:  </td>
                  <td><%= show_address @profile.residence %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 panel">
          <div class="row">
            <div class="col-md-12">
              <h3 class="panel-header">Photos</h3>
            </div>
          </div>
          <div class="row panel-content">
            <div class="col-md-4">
            <%= image_tag "icon_photo_small",  height: "92px", width: "92px" %>
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            </div>
            <div class="col-md-4">
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
              <a href="#" class="panel-link">See More Photos</a>
            </div>
            <div class="col-md-4">
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 panel">
          <div class="row">
            <div class="col-md-12">
              <h3 class="panel-header">Friends</h3>
            </div>
          </div>
          <div class="row panel-content">
            <div class="col-md-4">
              <div class="friend-box">
              <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
                <a href="#">Ron Weasley</a>
              </div>
              <div class="friend-box">
              <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
                <a href="#">paragraph text</a>
              </div>
            </div>
            <div class="col-md-4">
              <div class="friend-box">
              <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
                <a href="#">Ginny Weasley</a>
              </div>
              <div class="friend-box">
              <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
                <a href="#">paragraph text</a>
                <a href="#" class="panel-link">See More Friends</a>
              </div>
            </div>
            <div class="col-md-4">
              <div class="friend-box">
              <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
                <a href="#">Hermione G.</a>
              </div>
              <div class="friend-box">
              <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
                <a href="#">paragraph text</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="post-form" class="col-md-7 col-md-offset-1">
    <% if @timeline.id == current_user.timeline_id %>
      <%= form_for @post do |post_fields| %>
      <div class="row">
        <div class="col-md-12 panel">
          <div class="row">
            <div class="col-md-12">
              <h3 class="panel-header">Post</h3>
            </div>
          </div>
          <div class="row panel-content">
            <div class="col-md-12">
              <%= post_fields.text_area :body, class: 'form-control', rows: '5' %>
            </div>
          </div>
          <div class="row panel-footer">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-2 col-md-offset-10">
                  <%= post_fields.submit "Post", class: "btn btn-primary btn-lg" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
      <% @posts.each do |post| %>
        <% if post.created_at %>
        <div class="row">
          <div class="col-md-12 panel">
            <div class="row panel-content">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-md-2">
                  <%= image_tag "icon_photo_small", height: "92px", width: "92px" %>
                  </div>
                  <div class="col-md-4 col-vcentered">
                    <%= post.user.full_name %>
                    <p><%= "Posted on #{post.created_at}" %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <p><%= post.body %></p>
                  </div>
                </div>
              </div>
            </div>
            <div class="row panel-footer">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-md-1">
                    <% if !post.liked?(current_user) %>
                      <%= form_for post do |post_fields| %>
                        <%= post_fields.fields_for :likes, @like do |like_fields| %>     
                            <%= like_fields.hidden_field :user_id %>
                            <%= like_fields.submit 'Like' %>
                        <% end %>
                      <% end %>
                    <% else %>
                      <%= link_to "Unlike", like_path(post.like(current_user)), method: :delete %>
                    <% end %>
                  </div>
                  <div class="col-md-1 col-md-offset-9">
                    <a href="#">Delete</a>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <p class="liked">
                      <% if post.liked? %>
                        <% n = post.likes_count %>
                        <% if post.liked?(current_user) %>
                          <%= "You and #{n-1} others have liked this post." if n > 1 %>
                          <%= "You have liked this post." if n == 1 %>
                        <% else %>
                          <%= "#{n} #{n > 1 ? 'people' : 'person'} #{n > 1 ? 'have liked' : 'has liked'} this post." %>
                        <% end %>
                      <% end%>
                    </p>
                  </div>
                </div>
                <div class="row">
                  <hr>
                  <% post.comments.each do |comment| %>
                  <div class="col-md-12">
                    <div class="row comment">
                      <div class="col-md-2">
                        <img src="icon_photo_small.png" height="74px" width="74px">
                      </div>
                      <div class="col-md-10">
                        <p> 
                          <%= link_to comment.user.full_name, user_path(comment.user) %> said on <%= comment.created_at %>.
                        </p>
                        <p><%= comment.body %></p>
                        <p class="liked">
                        <% if !comment.liked?(current_user) %>
                          <%= form_for comment do |comment_fields| %>
                            <%= comment_fields.fields_for :likes, @like do |like_fields| %>     
                                <%= like_fields.hidden_field :user_id %>
                                <%= like_fields.submit 'Like' %>
                            <% end %>
                          <% end %>
                        <% else %>
                          <%= link_to "Unlike", like_path(comment.like(current_user)), method: :delete %>
                        <% end %>
                        <% if comment.liked? %>
                          <% n = comment.likes_count %>
                          <% if comment.liked?(current_user) %>
                            <%= "You and #{n-1} others have liked this comment." if n > 1 %>
                            <%= "You have liked this comment." if n == 1 %>
                          <% else %>
                            <%= "#{n} #{n > 1 ? 'people' : 'person'} #{n > 1 ? 'have liked' : 'has liked'} this comment." %>
                          <% end %>
                        <% end%>
                        </p>
                      </div>
                    </div>
                  </div>
                  <% end %>
                  <div id="comment-form">
                  <%= form_for post do |post_fields| %>
                    <div class="row">
                      <%= post_fields.fields_for :comments, @comment do |comment_fields| %>
                      <div class="col-md-12">
                        <%= comment_fields.hidden_field :user_id %>
                        <%= comment_fields.text_area :body, class: 'form-control', rows: '5' %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-2 col-vcentered">
                        <a href="#">Cancel</a>
                      </div>
                      <div class="col-md-2 col-md-offset-10">
                        <%= comment_fields.submit 'Comment', class: "btn btn-primary btn-md" %>
                      </div>
                    </div>
                  <% end%>
                  </div>
                </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>         
    </div>
  </div>

<%= link_to 'Sign out', logout_path, method: :delete%>
</main>